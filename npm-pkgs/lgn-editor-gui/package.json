{
  "name": "@lgn/editor-gui",
  "version": "0.1.0",
  "description": "Legion's monorepo",
  "repository": "https://github.com/legion-labs/legion",
  "author": "devs@legionlabs.com",
  "license": "MIT OR Apache-2.0",
  "private": true,
  "type": "module",
  "main": "src/electron.cjs",
  "packageManager": "pnpm@6.24.1",
  "scripts": {
    "start:desktop": "cross-env LOAD_DEV_URL=true concurrently --names \"svelte-kit,electron\" \"svelte-kit dev\" \"electron src/electron/main.cjs\" --kill-others",
    "start:browser": "svelte-kit dev",
    "start": "pnpm start:browser",
    "build": "svelte-kit build",
    "check": "pnpm lint && pnpm fmt:check && pnpm svelte:check",
    "lint": "eslint --ext .ts,.svelte .",
    "lint:fix": "eslint --ext .ts,.svelte --fix .",
    "fmt": "prettier --write . --plugin-search-dir=. ./**/*.svelte",
    "fmt:check": "prettier --check . --plugin-search-dir=. ./**/*.svelte",
    "svelte:check": "tsc && svelte-check --use-new-transformation",
    "clean": "rimraf node_modules dist",
    "test": "vitest run",
    "fluent:generate": "cargo run --bin lgn-fluent-generator -- -i ./src/assets/locales/en-US/**/*.ftl -o ./src/types",
    "benchmark": "vite build --mode development -c benchmarks/vite.config.js -l silent && node dist/benchmarks/index.js"
  },
  "devDependencies": {
    "@lgn/vite-plugin-ts-proto": "workspace:^0.1.0",
    "@lgn/vite-plugin-wasm": "workspace:^0.1.0",
    "@lgn/web-client-config": "^0.1.0",
    "@sveltejs/adapter-static": "^1.0.0-next.28",
    "@sveltejs/kit": "^1.0.0-next.327",
    "@sveltejs/vite-plugin-svelte": "^1.0.0-next.44",
    "@swc/core": "^1.2.182",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/svelte": "^3.1.1",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/color-convert": "^2.0.0",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "autoprefixer": "^10.4.7",
    "c8": "^7.11.2",
    "concurrently": "^7.1.0",
    "cross-env": "^7.0.3",
    "electron": "^18.2.2",
    "electron-serve": "^1.1.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "jsdom": "^19.0.0",
    "postcss": "^8.4.13",
    "postcss-load-config": "^3.1.4",
    "prettier": "^2.6.2",
    "prettier-plugin-svelte": "^2.7.0",
    "rimraf": "^3.0.2",
    "svelte": "^3.48.0",
    "svelte-check": "^2.7.0",
    "svelte-preprocess": "^4.10.6",
    "tailwindcss": "^3.0.24",
    "ts-proto": "^1.112.1",
    "typescript": "^4.6.4",
    "vite": "^2.9.9",
    "vite-tsconfig-paths": "^3.4.1",
    "vitest": "^0.12.4"
  },
  "dependencies": {
    "@fluent/bundle": "^0.17.1",
    "@fluent/langneg": "^0.6.2",
    "@iconify/svelte": "^2.2.1",
    "@improbable-eng/grpc-web": "^0.15.0",
    "@lgn/proto-editor": "^0.1.0",
    "@lgn/proto-log-stream": "^0.1.0",
    "@lgn/proto-runtime": "^0.1.0",
    "@lgn/proto-streaming": "^0.1.0",
    "@lgn/web-client": "^0.1.0",
    "browser-headers": "^0.4.1",
    "color-convert": "^2.0.1",
    "google-protobuf": "^3.20.1",
    "grpc-web": "^1.3.1",
    "long": "^5.2.0",
    "monaco-editor": "0.33.0",
    "pnpm": "^7.0.1",
    "protobufjs": "^6.11.2",
    "rxjs": "7.5.5",
    "svelte-forms": "^2.3.0",
    "svelte-window": "^1.2.3",
    "uuid": "^8.3.2",
    "uuid-random": "^1.3.2"
  }
}
