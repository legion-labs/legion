{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "importsNotUsedAsValues": "error",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": [
      "svelte",
      // The @testing-library/jest-dom lib relies on @types/jest
      // which global types conflict with vitest, as long as
      // the conflict isn't solved we need to comment this out
      // and drop jest below
      // "vitest/globals",
      "jest",
      "vite/client",
      "@sveltejs/kit",
      "@lgn/web-client/src/types/electron",
      "@lgn/web-client/src/types/custom-events"
    ],
    "baseUrl": ".",
    "paths": {
      "@/resources/*": ["tests/resources/*"],
      "@/*": ["src/*"],
      // Sveltekit insists on having these two
      "$lib": ["src/lib"],
      "$lib/*": ["src/lib/*"]
    }
  },
  "include": [
    // Source
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.svelte",
    // Tests
    "tests/**/*.ts",
    // Electron
    "src/electron/**/*.cjs",
    // Configuration files
    "*.cjs",
    "*.js"
  ]
}
