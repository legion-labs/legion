{
  "name": "legion",
  "version": "0.0.1",
  "description": "monorepo for legion labs",
  "private": true,
  "packageManager": "pnpm@6.24.1",
  "scripts": {
    "build": "pnpm -r build",
    "check": "pnpm -r check",
    "quickcheck": "pnpm -r quickcheck",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "fmt": "pnpm -r fmt",
    "fmt:check": "pnpm -r fmt:check",
    "clean": "pnpm -r clean && rimraf node_modules",
    "test": "pnpm -r test",
    "benchmark": "pnpm -r benchmark",
    "dependencies:update": "pnpm up -r -i --latest",
    "analytics:start": "pnpm -C crates/lgn-analytics-gui/frontend start",
    "editor:start": "pnpm -C crates/lgn-editor-gui/frontend start",
    "runtime:start": "pnpm -C crates/lgn-runtime-gui/frontend start"
  },
  "devDependencies": {
    "rimraf": "^3.0.2",
    "wasm-pack": "0.10.2"
  }
}