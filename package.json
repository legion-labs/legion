{
  "name": "legion",
  "version": "0.0.1",
  "description": "monorepo for legion labs",
  "private": true,
  "packageManager": "pnpm@6.24.1",
  "scripts": {
    "build": "pnpm -r build",
    "check": "pnpm -r check",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "fmt": "pnpm -r fmt",
    "fmt:check": "pnpm -r fmt:check",
    "clean": "pnpm -r clean && rimraf node_modules",
    "test": "pnpm -r test",
    "benchmark": "pnpm -r benchmark",
    "dependencies:update": "pnpm up -r -i --latest",
    "analytics:start": "pnpm -C npm-pkgs/lgn-analytics-gui start",
    "editor:start": "pnpm -C npm-pkgs/lgn-editor-gui start",
    "runtime:start": "pnpm -C npm-pkgs/lgn-runtime-gui start",
    "analytics:start:desktop": "pnpm -C npm-pkgs/lgn-analytics-gui start:desktop",
    "editor:start:desktop": "pnpm -C npm-pkgs/lgn-editor-gui start:desktop",
    "runtime:start:desktop": "pnpm -C npm-pkgs/lgn-runtime-gui start:desktop"
  },
  "devDependencies": {
    "@types/tailwindcss": "^3.0.10",
    "autoprefixer": "^10.4.4",
    "postcss": "^8.4.12",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.0.24",
    "wasm-pack": "0.10.2"
  }
}