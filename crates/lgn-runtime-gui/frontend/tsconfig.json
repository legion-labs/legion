{
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": [
      "svelte",
      // The @testing-library/jest-dom lib relies on @types/jest
      // which global types conflict with vitest, as long as
      // the conflict isn't solved we need to comment this out
      // "vitest/globals",
      "vite/client",
      "@lgn/web-client/src/types/tauri",
      "@lgn/web-client/src/types/custom-events"
    ],
    "baseUrl": ".",
    "paths": {
      "@/resources/*": ["tests/resources/*"],
      "@/*": ["src/*"]
    }
  },
  "include": [
    // Source
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.svelte",
    // Tests
    "tests/**/*.ts",
    // Benchmarks
    "benchmarks/**/*.ts"
  ]
}
