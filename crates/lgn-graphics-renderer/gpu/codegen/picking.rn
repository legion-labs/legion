pub fn main(persistent_descriptor_set, frame_descriptor_set, view_descriptor_set ) {    
    [        
        #{
            type: "Struct",
            name: "PickingData",
            fields: [
                #{ name:"picking_pos", ty:"Float4" },
                #{ name:"picking_id", ty:"Uint1" },
                #{ name:"pad", ty:"Uint1", array_len:3 },            
            ]
        },
        #{
            type: "Struct",
            name: "PickingPushConstantData",
            fields: [
                #{ name:"transform", ty:"Transform" },
                #{ name:"mesh_description_offset", ty:"Uint1" },
                #{ name:"picking_id", ty:"Uint1" },
                #{ name:"picking_distance", ty:"Float1" },
                #{ name:"use_gpu_pipeline", ty:"Uint1" },
            ]
        },
        #{
            type: "DescriptorSet",
            name: "PickingDescriptorSet",
            frequency: crate::USER_DESCRIPTOR_SET_FREQUENCY,
            descriptors: [
                #{ name: "picked_count", type: "RWStructuredBuffer", content: "Uint1" },
                #{ name: "picked_objects", type: "RWStructuredBuffer", content: "PickingData" },
            ]        
        },
        #{
            type: "PipelineLayout",
            name: "PickingPipelineLayout",
            descriptor_sets: [ persistent_descriptor_set.name, frame_descriptor_set.name, view_descriptor_set.name, "PickingDescriptorSet" ],
            push_constant: "PickingPushConstantData"
        },
        #{            
            type: "Shader",
            name: "PickingShader",
            path: "gpu/shaders/picking.hlsl",
            pipeline_layout: "PickingPipelineLayout",            
            instances: [
                #{                      
                    stages: [ "VS", "PS" ],
                },                
            ]            
        }
    ]
}


